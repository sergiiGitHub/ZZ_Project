<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.sergii.rotationcircleview.view.RotationCircleView
        android:id="@+id/progress_view"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:background="#00cc00"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="0dp"
        app:rcv_bg_color="@color/colorWhite"
        app:rcv_bg_ring_color="@color/colorWhiteHalf"
        app:rcv_bg_ring_thickness="14dp"
        app:rcv_icon_src="@drawable/record"
        app:rcv_fg_size="120dp"
        app:rcv_text="Hold to record"
        app:rcv_text_color="@color/colorPrimaryDark"
        app:rcv_text_size="16sp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start animation"
        android:id="@+id/start_animation" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cencel Animation"
        android:id="@+id/cancel_animation" />
</LinearLayout>
